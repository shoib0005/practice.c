    return 0;
}

// 25: Write a program to implement a basic calculator using switch-case for +, -, *, /, %.
#include <stdio.h>
int main() {
    int x, y;
    char op;
    printf("enter x : ");
    scanf("%d", &x);
    printf("enter y : ");
    scanf("%d", &y);
    printf("enter operator (+,-,*,/,%) : ");
    scanf(" %c", &op);    
    switch(op) {
        case '+' : printf("%d\n", x + y);
              break ;
        case '-' : printf("%d\n", x - y);
              break ;
        case '*' : printf("%d\n", x * y);
             break ;
        case '/' : printf("%d\n", x / y);
             break ;
        case '%' : printf("%d\n", x % y);
             break ;
    }
    return 0;
}

// 26: Write a program to print numbers from 1 to n.
#include <stdio.h>
int main() {
    int n;
    printf("enter n : ");
    scanf("%d", &n);
   for(int i =1; i<=n; i++) {
       printf("%d\n", i);
   }
    return 0;
}

// 27: Write a program to print the sum of the first n odd numbers.
#include <stdio.h>
#include<math.h>
int main() {
  int n, sum=0;
  printf("enter n : ");
  scanf("%d", &n);
 for(int i=1; i<=n; i=i+2) {
     sum = sum + i;
     printf("%d\n", sum);
 }
 
  
    return 0;
}

//28: Write a program to print the product of even numbers from 1 to n
#include <stdio.h>
int main() {
   int n;
   printf("enter n : ");
   scanf("%d", &n);
   long long product = 1;
   for(int i =2; i<=n; i=i+2) {
         product = product * i;
       printf("product is %d\n", product);
     
   }

    return 0;
}

// 29: Write a program to calculate the factorial of a number
#include <stdio.h>
int main() {
    int n, fact=1;
    printf("enter n : ");
    scanf("%d", &n);
    for(int i=1; i<=n; i++) {
        fact = fact*i;
    }
      printf("%d\n", fact);
  
    return 0;
}

